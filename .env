# Sporty Docker Compose Configuration
# Copy this file to .env and customize as needed
# Values here will override defaults in docker-compose.yml

# ===========================================
# Kafka Configuration
# ===========================================
KAFKA_BOOTSTRAP_SERVERS=kafka:9093
KAFKA_TOPIC_SCORE_UPDATES=sports-score-updates
KAFKA_TOPIC_PARTITIONS=3
KAFKA_REPLICATION_FACTOR=1
KAFKA_PUBLISH_TIMEOUT=5000

# ===========================================
# Server Configuration
# ===========================================
SERVER_PORT=8080

# ===========================================
# External API Configuration
# ===========================================
EXTERNAL_API_BASE_URL=http://localhost:8080
EXTERNAL_API_TIMEOUT=5000
EXTERNAL_API_MAX_RETRIES=2

# ===========================================
# Mock External API
# ===========================================
# Set to "false" to use a real external API
MOCK_EXTERNAL_API_ENABLED=true

# ===========================================
# Java/JVM Configuration
# ===========================================
JAVA_OPTS=-Xmx512m -Xms256m -XX:+UseG1GC -XX:MaxGCPauseMillis=200

# ===========================================
# Logging (Optional - Spring Boot supports these)
# ===========================================
 LOGGING_LEVEL_ORG_EXAMPLE_SPORTY=DEBUG
 LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_KAFKA=INFO
# LOGGING_LEVEL_ORG_APACHE_KAFKA=WARN

# ===========================================
# Spring Profiles (Optional)
# ===========================================
# SPRING_PROFILES_ACTIVE=docker

